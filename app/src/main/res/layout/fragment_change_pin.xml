<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.ChangePinFragment"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textChangePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Change PIN"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/buttonBack"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="17sp"
        android:gravity="center"
        android:text="Enter your current 6 ZWallet PIN below to continue to the next steps."
        android:textColor="@color/greyDarkColor"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescription">

        <EditText
            android:id="@+id/pin1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="1">
        </EditText>
        <EditText
            android:id="@+id/pin3"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin4"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin5"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin6"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="1">
        </EditText>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_continue_to_new_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/background_button_auth"
        android:textAllCaps="false"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_font"
        android:layout_marginVertical="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>