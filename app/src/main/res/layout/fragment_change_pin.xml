<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.ChangePinFragment"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textChangePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Change PIN"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/buttonBack"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="17sp"
        android:text="Enter your current 6 ZWallet PIN below to continue to the next steps."
        android:textColor="@color/greyDarkColor"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"/>

    <LinearLayout
        android:id="@+id/input_pin_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/inputPin1"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:singleLine="true"
            android:nextFocusForward="@+id/inputPin2"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/inputPin2"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:singleLine="true"
            android:nextFocusForward="@+id/inputPin3"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/inputPin3"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:singleLine="true"
            android:nextFocusForward="@+id/inputPin4"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/inputPin4"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@+id/inputPin5"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/inputPin5"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:nextFocusForward="@+id/inputPin6"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/inputPin6"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:background="@color/white"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_continue_to_new_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/background_button_auth"
        android:textAllCaps="false"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_font"
        android:layout_marginVertical="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>