<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.InputOtpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">

        <TextView
            android:id="@+id/textLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="100dp"
            style="@style/TextView.SplashScreen"
            android:textColor="@color/primaryColor"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/containerFormOTP"
            app:layout_constraintTop_toBottomOf="@id/textLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please input your OTP"
                android:gravity="center"
                android:id="@+id/textinputOTP"
                style="@style/TextView.SplashScreen"
                android:textColor="@color/greyDarkColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textOTPdesc"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                style="@style/TextView.SplashScreen.Description"
                android:textColor="@color/greyDarkColor"
                android:text="We have sent your OTP (One Time Password) code via Email"
                app:layout_constraintTop_toBottomOf="@id/textinputOTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id="@+id/input_pin_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textOTPdesc"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/inputPin1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputPin2"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/inputPin2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputPin3"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/inputPin3"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputPin4"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/inputPin4"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputPin5"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/inputPin5"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputPin6"
                    android:background="@color/white"/>
                <EditText
                    android:id="@+id/inputPin6"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:background="@color/white"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button_auth"
            android:paddingHorizontal="24dp"
            android:paddingVertical="15dp"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="#88888F"
            app:layout_constraintTop_toBottomOf="@id/containerFormOTP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>