<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.InputOtpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">

        <TextView
            android:id="@+id/textLogo"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextView.Logo"
            android:layout_marginTop="100dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/containerFormOTP"
            app:layout_constraintTop_toBottomOf="@id/textLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please input your OTP"
                android:gravity="center"
                android:id="@+id/textinputOTP"
                style="@style/TextView.SplashScreen"
                android:textColor="@color/greyDarkColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textOTPdesc"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                style="@style/TextView.SplashScreen.Description"
                android:textColor="@color/greyDarkColor"
                android:text="We have sent your OTP (One Time Password) code via Email"
                app:layout_constraintTop_toBottomOf="@id/textinputOTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textOTPdesc">

                <EditText
                    android:id="@+id/pin1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/pin2"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="1">
                </EditText>
                <EditText
                    android:id="@+id/pin3"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/pin4"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/pin5"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/pin6"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="1">
                </EditText>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button_auth"
            android:paddingHorizontal="24dp"
            android:paddingVertical="15dp"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="#88888F"
            app:layout_constraintTop_toBottomOf="@id/containerFormOTP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>