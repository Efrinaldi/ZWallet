<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.transfer.PinTransferConfirmationFragment"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textEnterPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Enter Your PIN"
        style="@style/TextView.Bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEnterPin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_auth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textDescEnterPin"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Enter your 6 digits PIN for confirmation to continue transferring money."
            android:textColor="@color/greyDarkColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDescEnterPin">

            <EditText
                android:id="@+id/inputPin1"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@+id/inputPin2"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputPin2"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@+id/inputPin3"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputPin3"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@+id/inputPin4"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputPin4"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@+id/inputPin5"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputPin5"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@+id/inputPin6"
                android:singleLine="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputPin6"
                android:layout_width="47dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTransferNow"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button_auth"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp"
            android:text="Transfer Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>