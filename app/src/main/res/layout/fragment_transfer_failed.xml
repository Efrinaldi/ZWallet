<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.transfer.TransferFailedFragment"
    android:background="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFailed"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textTrfSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgFailed"
            android:text="We canâ€™t transfer your money at the moment, we recommend you to check your internet connection and try again."
            style="@style/TextView"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/textDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            style="@style/TextView.Bold"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/textTrfSuccess"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/containerAmount"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/textDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:fontFamily="@font/nunito_font"
                android:textColor="@color/greyDarkColor"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/valueAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rp100.000"
                android:layout_marginStart="15dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp">
            <TextView
                android:id="@+id/textBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance Left"
                android:fontFamily="@font/nunito_font"
                android:textColor="@color/greyDarkColor"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/valueBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Rp100.000"
                android:layout_marginStart="15dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDate"
            app:layout_constraintTop_toBottomOf="@id/containerBalance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp">
            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Time"
                android:fontFamily="@font/nunito_font"
                android:textColor="@color/greyDarkColor"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/valueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Mar 2020, 12.20"
                android:fontFamily="@font/nunito_font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerNotes"
            app:layout_constraintTop_toBottomOf="@id/containerDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp">
            <TextView
                android:id="@+id/textNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:fontFamily="@font/nunito_font"
                android:textColor="@color/greyDarkColor"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/valueNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="For Buying Some Socks"
                android:layout_marginStart="15dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textTrasnferTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer To"
            style="@style/TextView.Bold"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/containerNotes"
            app:layout_constraintStart_toStartOf="parent" />
        <include
            android:id="@+id/receiverInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_contact_transaction"
            app:layout_constraintTop_toBottomOf="@id/textTrasnferTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/background_button_auth_active"
            android:fontFamily="@font/nunito_font_medium"
            android:paddingVertical="12dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/receiverInfo"
            app:layout_constraintVertical_bias="0.525" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>